CompileFlags:
  Add:
    - -DIRAM_ATTR=
    - -D__ESP_PLATFORM__=1
    - -DESP_PLATFORM=1
    - -DCONFIG_IDF_TARGET_ESP32=1
    - -D__XTENSA__=1
  Remove:
    - -mlongcalls
    - -fno-shrink-wrap
    - -fstrict-volatile-bitfields
    - -fno-tree-switch-conversion

Diagnostics:
  Suppress:
    - drv_unknown_argument
    - drv_unknown_argument_with_suggestion
    - pp_file_not_found

Index:
  Background: Build

CompilationDatabase: "build"
